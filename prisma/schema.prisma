generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Trade {
  id         String   @id @default(uuid())
  symbol     String
  direction  String
  setup      String
  contracts  Float    @default(1) // Nouveau champ ! (Float permet les 0.5 lots)
  entryPrice Float
  exitPrice  Float
  pnl        Float
  rr         Float    @default(0)
  date       String
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}